    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue3.vue"
  ],
  "exclude": [
    "*.json",
    "src/**/*.vue2.vue"
  ]
}